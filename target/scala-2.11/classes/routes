# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Tasks
GET     /login                      controllers.Application.login
GET     /logout                     controllers.Application.logout
POST    /login                      controllers.Application.authenticate
GET     /signup                     controllers.Application.signup
POST    /                           controllers.Application.create
GET    /edit/:id                    controllers.Application.edit(id: String)
POST    /update/:id                 controllers.Application.update(id: String)
GET     /delete/:id                 controllers.Application.delete(id: String)
POST    /newuser                    controllers.Application.newUser

# Map static resources from the /public folder to the /assets URL path
# GET     /assets/*file               controllers.Assets.versioned(path="/public", file)
